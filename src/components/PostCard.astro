---
import { formatDate } from '@/utils/content';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags: string[];
  slug: string;
  featured?: boolean;
}

const { title, description, pubDate, tags, slug, featured = false } = Astro.props;
---

<article class={`group relative bg-medium-gray rounded-xl p-6 hover:bg-gray-700 transition-all duration-300 hover:scale-[1.02] ${featured ? 'ring-2 ring-neon-purple/30' : ''}`}>
  {featured && (
    <div class="absolute -top-2 -right-2 bg-gradient-to-r from-neon-purple to-neon-pink text-white text-xs px-3 py-1 rounded-full font-medium">
      Featured
    </div>
  )}
  
  <div class="flex flex-col h-full">
    <header class="mb-4">
      <h3 class="text-xl font-bold font-heading mb-2 group-hover:text-neon-purple transition-colors duration-200">
        <a href={`/posts/${slug}`} class="hover:underline">
          {title}
        </a>
      </h3>
      <p class="text-gray-400 text-sm mb-3">
        <time datetime={pubDate.toISOString()}>
          {formatDate(pubDate)}
        </time>
      </p>
      <p class="text-gray-300 leading-relaxed">
        {description}
      </p>
    </header>
    
    <footer class="mt-auto">
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.slice(0, 3).map((tag) => (
          <span class="px-2 py-1 text-xs bg-dark-gray rounded-md text-gray-400 border border-gray-700">
            #{tag}
          </span>
        ))}
        {tags.length > 3 && (
          <span class="px-2 py-1 text-xs text-gray-500">
            +{tags.length - 3} more
          </span>
        )}
      </div>
      
      <a 
        href={`/posts/${slug}`}
        class="inline-flex items-center gap-2 text-sm font-medium text-neon-purple hover:text-neon-pink transition-colors duration-200"
      >
        Read more
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </footer>
  </div>
</article>
