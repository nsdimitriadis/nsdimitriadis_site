---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { cvEntries } from '@/data/cvEntries';

const entry = cvEntries.find(e => e.slug === 'neurocom-rising-star');
---

<BaseLayout 
  title="Neurocom's Rising Star - Nikos Dimitriadis"
  description="Where the journey began in data engineering"
  article={true}
>
  <article class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <a href="/cv" class="text-neon-purple hover:text-neon-pink transition-colors duration-200 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to CV
        </a>
      </nav>

      <!-- Hero Image -->
      {entry?.coverImage && (
        <div class="w-full h-64 md:h-96 rounded-2xl mb-8 overflow-hidden border border-gray-800">
          <img src={new URL(entry.coverImage, Astro.url).pathname} alt="Neurocom's Rising Star" class="w-full h-full object-cover" />
        </div>
      )}

      <!-- Title Section -->
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-4">
          {entry?.logoSrc && (
            <img 
              src={new URL(entry.logoSrc, Astro.url).pathname} 
              alt="Neurocom logo" 
              class="h-10 w-auto object-contain"
            />
          )}
          <span class="text-sm text-neon-purple font-medium">June 2019</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold font-heading mb-6">
          Neurocom's Rising Star
        </h1>
      </div>

      <!-- Content -->
      <div class="prose prose-invert max-w-none">
        <p class="text-xl text-gray-400 leading-relaxed mb-8">
          [Placeholder: Add 30-50 words about where your journey began in data engineering at Neurocom. Describe your early experiences and foundational learnings.]
        </p>
        
        <h2>Overview</h2>
        <p>
          [Add detailed content about your role and responsibilities at Neurocom]
        </p>

        <h2>Key Achievements</h2>
        <ul>
          <li>[Achievement 1]</li>
          <li>[Achievement 2]</li>
          <li>[Achievement 3]</li>
        </ul>

        <h2>Technologies Used</h2>
        <p>
          [List and describe the key technologies and tools used in this role]
        </p>
      </div>
    </div>
  </article>
</BaseLayout>
