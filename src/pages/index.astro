---
import BaseLayout from '@/layouts/BaseLayout.astro';
import FlipTile from '@/components/FlipTile';
import TechCarousel from '@/components/TechCarousel';
import { technologies } from '@/data/technologies';

const tiles = [
  { title: 'CV', href: '/cv', gradient: 'from-neon-purple to-neon-pink', backImage: '/images/tiles/cv.png' },
  { title: 'Sports', href: '/sports', gradient: 'from-neon-blue to-neon-purple', backImage: '/images/tiles/sports.png' },
  { title: 'Music', href: '/music', gradient: 'from-neon-pink to-neon-purple', backImage: '/images/tiles/music.png' },
  { title: 'Contact', href: '/contact', gradient: 'from-silver to-neon-blue', backImage: '/images/tiles/contact.png' },
];
---

<BaseLayout 
  title="Nikos Dimitriadis - Data Engineer & Portfolio"
  description="Personal portfolio showcasing my work as a Data Engineer and Software Engineer."
>
  <!-- Hero Section -->
  <section class="min-h-[60vh] flex items-center justify-center px-4 pt-20">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-bold font-heading mb-6 animate-fade-in">
        <span class="gradient-text">Nikos Dimitriadis</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 max-w-3xl mx-auto animate-fade-in" style="animation-delay: 100ms">
        Data Engineer crafting elegant solutions at the intersection of data and technology
      </p>
    </div>
  </section>

  <!-- Tiles Section -->
  <section class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {tiles.map((tile, index) => (
          <div class="animate-fade-in" style={`animation-delay: ${(index + 1) * 100}ms`}>
            <FlipTile
              client:load
              title={tile.title}
              href={tile.href}
              gradient={tile.gradient}
              backImage={tile.backImage}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technologies Carousel -->
  <section class="py-20 px-4 bg-dark-gray">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold font-heading text-center mb-12 fade-on-scroll">
        Technologies & Tools
      </h2>
      <TechCarousel client:load items={technologies} />
    </div>
  </section>
</BaseLayout>
