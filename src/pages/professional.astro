---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import PostCard from '@/components/PostCard.astro';
import { getCollection } from 'astro:content';

// Get professional posts
const allPosts = await getCollection('posts');
const professionalPosts = allPosts
  .filter(post => post.data.tags.includes('professional'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const skills = [
  { name: 'Python', level: 95, category: 'Languages' },
  { name: 'SQL', level: 90, category: 'Languages' },
  { name: 'JavaScript/TypeScript', level: 85, category: 'Languages' },
  { name: 'Apache Airflow', level: 90, category: 'Data Tools' },
  { name: 'Apache Spark', level: 85, category: 'Data Tools' },
  { name: 'Kafka', level: 80, category: 'Data Tools' },
  { name: 'AWS', level: 85, category: 'Cloud' },
  { name: 'Docker/Kubernetes', level: 80, category: 'DevOps' },
  { name: 'PostgreSQL', level: 90, category: 'Databases' },
  { name: 'MongoDB', level: 75, category: 'Databases' }
];

const experience = [
  {
    company: 'Tech Company',
    role: 'Senior Data Engineer',
    period: '2022 - Present',
    description: 'Leading data infrastructure initiatives and building scalable data pipelines.',
    achievements: [
      'Architected data lake processing 10TB+ daily',
      'Reduced pipeline latency by 60% through optimization',
      'Led team of 5 engineers in data platform migration'
    ]
  },
  {
    company: 'Growth Startup',
    role: 'Data Engineer',
    period: '2020 - 2022',
    description: 'Built data infrastructure from ground up for fast-growing startup.',
    achievements: [
      'Implemented real-time analytics platform',
      'Designed ETL pipelines for multi-source data integration',
      'Created ML feature engineering framework'
    ]
  }
];
---

<BaseLayout 
  title="Professional | Nikos Dimitriadis"
  description="Explore my professional experience, skills, and projects in data engineering and software development."
>
  <!-- Hero -->
  <Hero 
    title="Professional Experience"
    subtitle="Data Engineer & Software Engineer"
    description="Passionate about building scalable data systems and elegant software solutions that drive business impact."
    cta={{
      text: "Download Resume",
      href: "/resume.pdf",
      variant: "secondary"
    }}
    secondaryCta={{
      text: "Get in Touch",
      href: "/contact"
    }}
  />

  <!-- Skills Section -->
  <section class="py-20 px-4 bg-dark-gray">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 fade-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold font-heading mb-4">
          Technical Skills
        </h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Technologies and tools I work with to build robust data systems and applications.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {['Languages', 'Data Tools', 'Cloud', 'DevOps', 'Databases'].map((category) => (
          <div class="bg-medium-gray rounded-xl p-6 fade-on-scroll">
            <h3 class="text-lg font-semibold text-white mb-6">{category}</h3>
            <div class="space-y-4">
              {skills.filter(skill => skill.category === category || (category === 'Cloud' && skill.category === 'DevOps')).map((skill) => (
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-300 font-medium">{skill.name}</span>
                    <span class="text-sm text-gray-400">{skill.level}%</span>
                  </div>
                  <div class="w-full bg-gray-700 rounded-full h-2">
                    <div 
                      class="bg-gradient-to-r from-neon-purple to-neon-pink h-2 rounded-full transition-all duration-1000"
                      style={`width: ${skill.level}%`}
                    ></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16 fade-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold font-heading mb-4">
          Work Experience
        </h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          My professional journey in building data-driven solutions.
        </p>
      </div>

      <div class="space-y-12">
        {experience.map((job, index) => (
          <div class="relative pl-8 border-l-2 border-gray-800 fade-on-scroll">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-neon-purple rounded-full"></div>
            <div class="bg-medium-gray rounded-xl p-8">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <div>
                  <h3 class="text-2xl font-bold font-heading text-white mb-1">{job.role}</h3>
                  <h4 class="text-lg text-neon-purple font-medium">{job.company}</h4>
                </div>
                <span class="text-gray-400 font-medium">{job.period}</span>
              </div>
              
              <p class="text-gray-300 mb-6">{job.description}</p>
              
              <div>
                <h5 class="text-white font-semibold mb-3">Key Achievements:</h5>
                <ul class="space-y-2">
                  {job.achievements.map((achievement) => (
                    <li class="flex items-start gap-3 text-gray-300">
                      <svg class="w-5 h-5 text-neon-purple mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      {achievement}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Professional Writing -->
  {professionalPosts.length > 0 && (
    <section class="py-20 px-4 bg-dark-gray">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16 fade-on-scroll">
          <h2 class="text-3xl md:text-4xl font-bold font-heading mb-4">
            Technical Writing
          </h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Insights and lessons learned from building data systems at scale.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {professionalPosts.map((post, index) => (
            <div class="fade-on-scroll" style={`animation-delay: ${index * 100}ms`}>
              <PostCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                tags={post.data.tags}
                slug={post.slug}
              />
            </div>
          ))}
        </div>

        <div class="text-center mt-12 fade-on-scroll">
          <a 
            href="/writing?tag=professional" 
            class="inline-flex items-center gap-2 px-6 py-3 bg-medium-gray text-white font-medium rounded-lg hover:bg-gray-600 transition-all duration-200 hover:scale-105"
          >
            View All Professional Posts
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto text-center fade-on-scroll">
      <h2 class="text-3xl font-bold font-heading mb-4">
        Let's Build Something Together
      </h2>
      <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Interested in working together or discussing data engineering challenges? I'd love to hear from you.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-neon-purple to-neon-pink text-white font-semibold rounded-lg hover:scale-105 transition-transform duration-200"
        >
          Start a Conversation
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a 
          href="/personal" 
          class="inline-flex items-center gap-2 px-8 py-4 border border-gray-600 text-gray-300 font-semibold rounded-lg hover:text-white hover:border-gray-500 transition-all duration-200"
        >
          Get to Know Me Personally
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
